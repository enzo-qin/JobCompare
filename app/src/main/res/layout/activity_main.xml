<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textview_MainMenu"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:paddingTop="10dp"
            android:text="Main Menu"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/button_EnterOrEditCurrentJob"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Enter or Edit Current Job"
            android:background="@drawable/round_btn"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button_EnterJobOffer"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/round_btn"
            android:text="Enter Job Offer"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button_Setting"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Adjust the Comparison Setting"
            android:background="@drawable/round_btn"
            android:textAlignment="center" />

        <Button
            android:id="@+id/button_CompareJobOffers"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Compare Job Offers"
            android:background="@drawable/round_btn"
            android:textAlignment="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
